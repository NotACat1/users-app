{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"],
      "@store/*": ["./store/*"],
      "@type/*": ["./types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
